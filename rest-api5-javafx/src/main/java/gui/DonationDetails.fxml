<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.DonationDetailsController">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Logout" onAction="#logout"/>
                <MenuItem text="Exit" onAction="#exit"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <AnchorPane prefHeight="400.0" prefWidth="520.0" style="-fx-background-color: #263F73;">
            <children>
                <VBox spacing="20" alignment="CENTER" layoutX="50.0" layoutY="50.0">
                    <Text fx:id="detailsTitle" text="Donation Details" style="-fx-font-size: 25px; -fx-fill: white;">
                        <effect>
                            <DropShadow color="black" radius="3" />
                        </effect>
                    </Text>
                    <Label text="ID:" />
                    <Label fx:id="idLabel" />
                    <Label text="Status:" />
                    <Label fx:id="statusLabel" />
                    <Label text="Requester ID:" />
                    <Label fx:id="requesterIdLabel" />
                    <Label text="Donor ID:" />
                    <Label fx:id="donorIdLabel" />
                    <Label text="Equipment ID:" />
                    <Label fx:id="equipmentIdLabel" />
                </VBox>
            </children>
        </AnchorPane>
    </center>
</BorderPane>